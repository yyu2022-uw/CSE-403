{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/data/*": ["assets/data/*"],
      "@/components/*": ["components/*"],
      "@Colors": ["constants/Colors.ts"],
      "@Spacing": ["constants/Spacing.ts"],
      "@Sizes": ["constants/Sizes.ts"],
      "@useUser": ["hooks/useUser.tsx"],
      "@providers": ["providers/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
